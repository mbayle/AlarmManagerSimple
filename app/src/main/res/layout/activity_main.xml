<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.alarmtest2.MainActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-14dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timePicker"
        android:layout_marginTop="21dp"
        android:text="Start"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewYourAlarm"
        android:layout_alignEnd="@+id/buttonStart"
        android:layout_alignRight="@+id/buttonStart"
        android:layout_marginBottom="17dp"
        android:text="STOP ALARM"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="380dp" />

    <TextView
        android:id="@+id/textViewYourAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStop"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonStop"
        android:layout_marginBottom="27dp"
        android:text="Your alarm :"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="428dp" />
</RelativeLayout>